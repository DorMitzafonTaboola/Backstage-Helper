{
  "manifest_version": 2,

  "name": "Taboola's Backstage helper",
  "description": "This extension will mark important details on Backstage",
  "version": "1.0",
  "icons": {
    "16": "Taboola16.png",
    "48": "Taboola48.png",
    "128": "Taboola128.png"
  },

  "browser_action": {
    "default_title": "Taboola's Backstage indicator"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "background",
    "activeTab",
    "tabs",
    "https://backstage.taboola.com/*"
  ]
}