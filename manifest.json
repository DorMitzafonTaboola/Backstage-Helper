{
  "manifest_version": 2,

  "name": "Taboola's Backstage helper",
  "description": "Highlights important buttons and details on Backstage",
  "version": "1.0",
  "icons": {
    "16": "TaboolaIcon.png",
    "48": "TaboolaIcon.png",
    "128": "Taboola128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "BackStage Helper"
  },

  "web_accessible_resources": ["Taboola-Widget-Example.png"],

  "background": {
    "scripts": ["jquery-3.2.1.min.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://backstage.taboola.com/*"
  ]
}
